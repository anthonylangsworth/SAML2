@using System.Security.Claims
@{
    ViewBag.Title = "Home Page";
}
@model TestSSO.Models.IndexModel

<div class="jumbotron">
    <h1>eduGAIN/Geant Test</h1>
    <p class="lead">A test page for exploring SAML2 authentication settings for eduGAIN/Geant.</p>
</div>

<div class="row">
    @if (Request.IsAuthenticated)
    {
        <h2>Claims</h2>
        <table>
            <thead>
            <tr>
                <th>Type</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            @foreach (Claim claim in Model.ClaimsIdentity.Claims)
            {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div>Not signedin.</div>
    }
</div>